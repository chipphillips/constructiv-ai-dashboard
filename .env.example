# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME="Constructiv AI Dashboard"
NEXT_PUBLIC_APP_DESCRIPTION="Professional AI-powered dashboard for construction industry"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase Database Connection (for direct database access)
SUPABASE_HOST=aws-0-us-east-1.pooler.supabase.com
SUPABASE_DB=postgres
SUPABASE_USER=postgres.your_project_ref
SUPABASE_PASSWORD=your_database_password
SUPABASE_PORT=5432
SUPABASE_PROJECT_ID=your_project_id

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_ORGANIZATION_ID=org-your_organization_id
OPENAI_PROJECT_ID=proj_your_project_id

# Authentication (if using custom auth)
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com

# External Services
UPLOADTHING_SECRET=sk_live_your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Monitoring (optional)
SENTRY_DSN=https://your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Development
DEBUG=false
VERBOSE_LOGGING=false

# Security
CSRF_SECRET=your_csrf_secret
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Performance
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_ENABLE_COMPRESSION=true

# Construction Industry Specific
NEXT_PUBLIC_DEFAULT_UNITS=imperial
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_ENABLE_SAFETY_FEATURES=true
NEXT_PUBLIC_COMPLIANCE_MODE=OSHA

# AI Configuration
NEXT_PUBLIC_AI_MODEL=gpt-4-turbo-preview
NEXT_PUBLIC_AI_TEMPERATURE=0.7
NEXT_PUBLIC_AI_MAX_TOKENS=4000
NEXT_PUBLIC_ENABLE_AI_SUGGESTIONS=true

# Database Schema
NEXT_PUBLIC_DB_SCHEMA=knowledge_base
NEXT_PUBLIC_ENABLE_REAL_TIME=true

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,docx,txt,csv,xlsx,png,jpg,jpeg,gif,svg

# Caching
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_ENABLE_CACHE=true

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000
API_RATE_LIMIT_PER_DAY=10000

# Backup and Recovery
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_RETENTION_DAYS=90

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# WebSocket (for real-time features)
WS_PORT=3002
WS_ENABLE_HEARTBEAT=true
WS_HEARTBEAT_INTERVAL=30000

# Note: Copy this file to .env.local and fill in your actual values
# Never commit actual environment variables to version control
# Use different values for development, staging, and production environments